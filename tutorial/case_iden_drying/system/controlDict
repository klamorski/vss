FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

libs (
      "libsoilFoam.so"
     );

application     soilFoam;

startFrom       latestTime;

startTime       3600;

stopAt          endTime;

deltaT            1; 

writeInterval     360;

endTime           1199520; //sand 14*24*3600=1071360; silt-loam 17.0*24*3600=1468800

adjustTimeStep    false;

deltaTSchedule
(
    // (max(currTime)  deltaT)
    (3601    0.0001)      
    (3602    0.001)      
    (3605    0.01)      
    (3610   0.1)
    (3630     1) //after last max(currTime) deltaT is used till the end of simulation
    // (10800    10)
    // (21200    50)
);

writeControl    runTime; 

purgeWrite      1;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      fixed;

timePrecision   2;

runTimeModifiable true;

allowSystemOperations 1;

functions
{
        probes1
        {                
                type                probes;
                libs                (sampling);        
                timeStart           0;
                writeInterval       360;
                writeControl        runTime;
                interpolationScheme cellPointFace;
                probeLocations
                (
                        //SAND
                        (0.0005  0.092  0.0005)
                        (0.0005  0.087  0.0005)
                        (0.0005  0.069  0.0005)
                        (0.0005  0.05  0.0005)
                        (0.0005  0.03  0.0005)

                        
                        //SILT
                        //(0.0005  0.092 0.0005)
                        //(0.0005  0.087 0.0005)
                        //(0.0005  0.077 0.0005)
                        //(0.0005  0.065 0.0005)
                        //(0.0005  0.046 0.0005)
                        //(0.0005  0.025 0.0005)
                        

                        (0.0005 0.0 0.0005)
                        (0.0005 0.005 0.0005)
                        (0.0005 0.01 0.0005)
                        (0.0005 0.015 0.0005)
                        (0.0005 0.02 0.0005)
                        (0.0005 0.025 0.0005)
                        (0.0005 0.03 0.0005)
                        (0.0005 0.035 0.0005)
                        (0.0005 0.04 0.0005)
                        (0.0005 0.045 0.0005)
                        (0.0005 0.05 0.0005)
                        (0.0005 0.055 0.0005)
                        (0.0005 0.06 0.0005)
                        (0.0005 0.065 0.0005)
                        (0.0005 0.07 0.0005)
                        (0.0005 0.075 0.0005)
                        (0.0005 0.08 0.0005)
                        (0.0005 0.085 0.0005)
                        (0.0005 0.09 0.0005)
                        (0.0005 0.095 0.0005)
                        (0.0005 0.1 0.0005)
                );     
                fields
                (                       
                        h
			Theta
                        K
                        Cv
                        DtMax
                );
        }
};

